<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.audio.futuresonic" version="0.5.1" name="FutureSonic" provider-name="Madevil">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Access your FutureSonic server</summary>
        <description>Provides basic access to your FutureSonic audio server.</description>
        <disclaimer>You need a FutureSonic server to connect to - check addon settings</disclaimer>
        <platform>all</platform>
    </extension>
</addon>

